@page
@model RemindMe.Pages.CreateReminder.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create a reminder</h1>

<h4>Reminder</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Reminder.Description" class="control-label"></label>
                <input asp-for="Reminder.Description" class="form-control" />
                <span asp-validation-for="Reminder.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reminder.Frequency" class="control-label"></label>
                <input asp-for="Reminder.Frequency" class="form-control" />
                <span asp-validation-for="Reminder.Frequency" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reminder.Time" class="control-label"></label>
                <input asp-for="Reminder.Time" class="form-control" />
                <span asp-validation-for="Reminder.Time" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="/Index">Back to Home</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}